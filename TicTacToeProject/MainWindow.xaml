<Window x:Class="TicTacToeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeProject"
        mc:Ignorable="d"
        Title="GameBoard" Height="700" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Name="btn1" Click="Button_Click" FontSize="116" Background="#FF690060" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontStyle="Italic" />
        <Button Grid.Row="0" Grid.Column="1" Name="btn2" Click="Button_Click" FontSize="116" Background="#66023C" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontWeight="Bold" />
        <Button Grid.Row="0" Grid.Column="2" Name="btn3" Click="Button_Click" FontSize="116" Background="#FF690060" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontStyle="Italic" />
        <Button Grid.Row="1" Grid.Column="0" Name="btn4" Click="Button_Click" FontSize="116" Background="#66023C" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontWeight="Bold" />
        <Button Grid.Row="1" Grid.Column="1" Name="btn5" Click="Button_Click" FontSize="116" Background="#FF690060" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontStyle="Italic" />
        <Button Grid.Row="1" Grid.Column="2" Name="btn6" Click="Button_Click" FontSize="116" Background="#66023C" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontWeight="Bold" />
        <Button Grid.Row="2" Grid.Column="0" Name="btn7" Click="Button_Click" FontSize="116" Background="#FF690060" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontStyle="Italic" />
        <Button Grid.Row="2" Grid.Column="1" Name="btn8" Click="Button_Click" FontSize="116" Background="#66023C" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontWeight="Bold" />
        <Button Grid.Row="2" Grid.Column="2" Name="btn9" Click="Button_Click" FontSize="116" Background="#FF690060" BorderBrush="#FACD1E" FontFamily="Old English Text MT" Foreground="#FF7F2122" FontStyle="Italic" />
        <Button x:Name="RestartButton" Content="Restart?" Grid.Row="3" Grid.ColumnSpan="3" FontSize="55" FontFamily="Old English Text MT" Background="#7F2122" BorderBrush="#FFFACD1E" Click="RestartButton_Click" Foreground="Black" FontWeight="Bold"/>

    </Grid>
</Window>
